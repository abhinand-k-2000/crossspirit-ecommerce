<%- include('../layouts/admHeader') %>

<section class="content-main">
    <div class="row">
        <div class="col-12">
            <div class="content-header">
                <h2 class="content-title">Add New Product</h2>
            </div>
            
            <% if(typeof message !== 'undefined'){ %>
                <h4 class="text-center mt-3"><%= message %></h4>
            <% } %>
        </div>
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h4>Basic</h4>
                </div>
                <div class="card-body">
                    <form enctype="multipart/form-data" action="/admin/edit-product/<%=product._id%>" method="POST">
                        <div class="mb-4">
                            <label for="product_name" class="form-label">Product Name</label>
                            <input type="text" placeholder="Type here" name="name" class="form-control" id="product_name" value="<%=product.name%>" pattern="^[a-zA-Z0-9\s]+$"/>
                        </div>                 
                        <div class="mb-4">
                            <label class="form-label">Description</label>
                            <textarea placeholder="Type here"  name="description" class="form-control" rows="4" ><%=product.description%></textarea>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="mb-4">
                                    <label class="form-label">Price</label>
                                    <div class="row gx-2">
                                        <input placeholder="$" type="text" name="price" value="<%=product.price %>" class="form-control"  />
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="mb-4">
                                    <label class="form-label">Stock</label>
                                    <input placeholder="" type="text" name="countInStock" value="<%=product.countInStock %>" class="form-control"  />
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="mb-4">
                                    <label class="form-label">Color</label>
                                    <input placeholder="" type="text" name="color" value="<%=product.color %>" class="form-control"  />
                                </div>
                            </div>
                        </div>
                        <h5 class="mb-3">Categories</h5>
                        <% category.forEach(category => { %>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="category_id" value="<%= category._id %>" id="product-cat-<%= category._id %>"   />
                                <label class="form-check-label" for="product-cat-<%= category._id %>"><%= category.name %></label>
                            </div>
                        <% }); %>
                    
                        <div class="mb-4">
                            <% if (product.images && product.images.length > 0) { %>
                                <div class="d-flex flex-wrap gap-3">
                                    <% product.images.forEach(image => { %>
                                        <img src="/products/<%= image %>" alt="Existing Image" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
                                    <% }); %>
                                </div>
                            <% } %>
                        </div>
                    
                        <div class="col-lg-3">
                            <div class="card mb-4">
                                <!-- <div class="card-header">
                                    <h4>Media</h4>
                                </div> -->
                                <div class="card-body">
                                    <div class="input-upload">
                                        <img src="/adminAssets/imgs/theme/upload.svg" alt="" />
                                        <input class="form-control" multiple name="images"  type="file" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div>
                                <button class="btn btn-md rounded font-sm hover-up" type="submit">Update</button>
                            </div>
                        </div>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>
</section>



 
            <!-- content-main end// -->
            
            <%- include('../layouts/admFooter') %>
