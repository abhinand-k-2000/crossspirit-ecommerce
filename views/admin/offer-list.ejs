        <div class="content-header">
            <div>
                <h2 class="content-title card-title">Offer List</h2>
            </div>
            <div>
                
                <a href="/admin/add-product-offer" class="btn btn-primary btn-sm rounded">Add Product Offer</a>
                <a href="/admin/add-category-offer" class="btn btn-primary btn-sm rounded">Add Category Offer</a>
            </div>
        </div>

        

        <div class="col-lg-12">
            <div class="card mb-4">
                <div class="card-header">
                    <h4>Category Offers </h4>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">No.</th>
                                <th scope="col">Name</th>
                                <th scope="col">Discount</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                     
                            <% categoryOffer.forEach((offer, index) => { %>
                                <tr>
                                    <td> <%= index+1 %> </td>
                                    <td> <%= offer.category.name %> </td>
                                    <td> <%= offer.percentage %> %</td>
                                    <td><a href="/admin/edit-category-offer?offerId=<%=offer._id%>" class="btn btn-dark btn-sm">Edit</a></td>
                                </tr>

                           <% }) %>
                              
              
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="card mb-4">
                <div class="card-header">
                    <h4>Product Offers </h4>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">No.</th>
                                <th scope="col">Name</th>
                                <th scope="col">Discout</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                     
                            <% product.forEach((offer, index) => { %>
                                <tr>
                                    <td> <%= index+1 %> </td>
                                    <td> <%= offer.product.name %> </td>
                                    <td> <%= offer.percentage %> %</td>
                                    <td><a href="/admin/edit-product-offer?offerId=<%=offer._id%>" class="btn btn-dark btn-sm">Edit</a></td>
                                </tr>

                           <% }) %>
                              
              
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        


    </div>
