<%- include('../layouts/admHeader') %>

<section class="content-main">
    <div class="row">
        <div class="col-9">
            <div class="content-header">
                <div> <h2 class="content-title">Coupon List</h2></div>
                <div><a href="/admin/coupon/add-coupon" class="btn btn-primary ">Add Coupon</a></div>
               
            </div>
        </div>

       
        

        <div class="col-lg-12">
            <div class="card mb-4">
               
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">No.</th>
                                <th scope="col">Coupon Code</th>
                                <th scope="col">Description</th>
                                <th scope="col">Min. Amount</th>
                                <th scope="col">Dicount</th>
                                <th scope="col">Starting Date</th>
                                <th scope="col">Expiry Date</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                     
                            <% coupons.forEach((item, index) => { %>
                                <tr>
                                    <td> <%= index+1 %> </td>
                                    <td> <%= item.couponCode %> </td>
                                    <td> <%= item.couponDescription %> </td>
                                    <td> <%= item.minAmount %> </td>
                                    <td> <%= item.discount %> </td>
                                    <td> <%= new Date(item.startingDate).toLocaleDateString('en-GB') %> </td>
                                    <td><%= new Date(item.expiryDate).toLocaleDateString('en-GB') %></td>


                                    
                                    <td><a href="/admin/coupon/edit-coupon?couponId=<%=item._id%>" class="btn btn-dark btn-sm">Edit</a></td>
                                </tr>

                           <% }) %>
                              
              
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <%- include('../layouts/admFooter') %>
