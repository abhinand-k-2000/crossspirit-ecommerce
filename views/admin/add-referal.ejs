<%- include('../layouts/admHeader') %>

<section class="content-main">
    <div class="row">
        <div class="col-12">
            <div class="content-header">
                <h2 class="content-title">Add Referral Offer</h2>
            </div>
            
                <% if(typeof message !== 'undefined'){ %>
                    <p class=" mt-3 <%=color%>" ><%= message %></p>
      
                  <% } %>
        </div>
        <div class="col-lg-6">
            <div class="card mb-4">
             
                <div class="card-body">

                    <form  action="/admin/referral/add-referral" method="POST"  >

                        <div class="mb-4">
                            <label for="couponCode" class="form-label">Referral Bonus</label>
                            <input type="text" placeholder="Type here" name="referralBonus" class="form-control" id="couponCode" oninput="validateCouponCode()" />
                            <small id="couponCodeError" class="text-danger"></small>
                        </div>
                        <div class="mb-4">
                            <label for="couponCode" class="form-label">Sign-Up Bonus</label>
                            <input type="text" placeholder="Type here" name="signUpBonus" class="form-control" id="couponCode" oninput="validateCouponCode()" />
                            <small id="couponCodeError" class="text-danger"></small>
                        </div>

                       

                      
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div>
                <button class="btn btn-md rounded font-sm hover-up" type="submit">Add</button>
            </div>
        </div>
    </form>
    </div>
</section>


     
            <%- include('../layouts/admFooter') %>
