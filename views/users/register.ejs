	<!-- Script file-->
	<script>
		function validateForm() {
			var nameInput = document.getElementById('inputFirstName').value.trim();
			var email = document.getElementById('inputEmailAddress').value;
			var emailRegex = /^[^\s@]+@gmail\.com$/i;
	
			var mobile = document.getElementById('inputMobile').value;
			var mobileRegex = /^\d{10}$/;
	
			var password = document.getElementById('inputChoosePassword').value;
			var passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%?&])[A-Za-z\d@$!%?&]{8,}$/;
	
			if (nameInput === "" || !/^[a-zA-Z]+$/.test(nameInput)) {
				alert("Please enter a valid name");
				return false;
			}
	
			
			if (!mobileRegex.test(mobileInput) || /^0+$/.test(mobileInput)) {
				alert('Invalid mobile number. Please enter a 10-digit number.');
				return false;
			}
	
			if (!emailRegex.test(email)) {
				alert('Invalid email. Please enter a valid Gmail address.');
				return false;
			}
	
	
			if (!passwordRegex.test(password)) {
				alert('Invalid password. It should be at least 8 characters long and include at least one uppercase letter, one lowercase letter, one number, and one special character.');
				return false;
			}
	
			return true;
	    }
	</script>
	
