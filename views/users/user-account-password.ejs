<!-- Add this script to show the notification -->
 <script>
	/* eslint-disable <% if (typeof successMessage !== 'undefined' && successMessage) { %> */
	Swal.fire({
	  icon: 'success',
	  title: 'Success!',
	  text: '<%= successMessage %>',
	  showConfirmButton: false,
	  timer: 2000,
	});
	/* eslint-enable <% } else if (typeof errorMessage !== 'undefined' && errorMessage) { %> */
	Swal.fire({
	  icon: 'error',
	  title: 'Error!',
	  text: '<%= errorMessage %>',
	}); 
	/* eslint-enable <% } %> */
  </script>




	

